<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="appli.accueil.SalleController">
    
    <!-- En-tête -->
    <top>
        <VBox spacing="10.0" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <Button fx:id="retourBtn" text="← Retour" onAction="#retour" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label text="Gestion des Salles" textFill="WHITE">
                        <font>
                            <Font name="Arial Bold" size="24.0" />
                        </font>
                    </Label>
                    <Label text="Ajoutez, modifiez et supprimez des salles" textFill="#ecf0f1">
                        <font>
                            <Font name="Arial" size="12.0" />
                        </font>
                    </Label>
                </VBox>
            </HBox>
        </VBox>
    </top>
    
    <!-- Zone centrale avec formulaire et tableau -->
    <center>
        <SplitPane dividerPositions="0.35" prefHeight="400.0" prefWidth="600.0">
            
            <!-- Formulaire à gauche -->
            <VBox spacing="15.0" style="-fx-background-color: #ecf0f1;">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
                
                <Label text="Informations de la salle" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                
                <VBox spacing="5.0">
                    <Label text="Nom de la salle *" />
                    <TextField fx:id="nomTextField" promptText="Ex: Salle A101" />
                </VBox>
                
                <Label fx:id="messageLabel" textFill="RED" wrapText="true">
                    <font>
                        <Font name="Arial Bold" size="11.0" />
                    </font>
                </Label>
                
                <HBox spacing="10.0">
                    <Button fx:id="ajouterBtn" text="Ajouter" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="100.0" onAction="#handleAjouter" />
                    <Button fx:id="modifierBtn" text="Modifier" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="100.0" onAction="#handleModifier" disable="true" />
                    <Button fx:id="annulerBtn" text="Annuler" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" prefWidth="100.0" onAction="#handleAnnuler" />
                </HBox>
                
                <Separator />
                
                <VBox spacing="10.0">
                    <Label text="Rechercher" style="-fx-font-weight: bold;" />
                    <TextField fx:id="rechercheTextField" promptText="Rechercher par nom..." onKeyReleased="#handleRecherche" />
                </VBox>
            </VBox>
            
            <!-- Tableau à droite -->
            <VBox spacing="10.0">
                <padding>
                    <Insets bottom="20.0" left="10.0" right="20.0" top="20.0" />
                </padding>
                
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label text="Liste des salles" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                    <Label fx:id="compteurLabel" text="(0 salle)" style="-fx-text-fill: #7f8c8d;" />
                </HBox>
                
                <TableView fx:id="salleTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="60.0" />
                        <TableColumn fx:id="nomColumn" text="Nom de la salle" prefWidth="250.0" />
                        <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150.0" />
                    </columns>
                </TableView>
                
                <HBox spacing="10.0" alignment="CENTER_RIGHT">
                    <Button text="Actualiser" onAction="#handleActualiser" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
                    <Button fx:id="supprimerBtn" text="Supprimer" onAction="#handleSupprimer" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" disable="true" />
                </HBox>
            </VBox>
            
        </SplitPane>
    </center>
    
    <!-- Pied de page -->
    <bottom>
        <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #34495e; -fx-padding: 10;">
            <Label fx:id="statutLabel" text="Prêt" textFill="WHITE">
                <font>
                    <Font name="Arial" size="11.0" />
                </font>
            </Label>
        </HBox>
    </bottom>
    
</BorderPane>
