<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="650.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="appli.accueil.FournitureController">
    
    <top>
        <VBox spacing="10.0" style="-fx-background-color: #27ae60; -fx-padding: 20;">
            <Label text="Gestion des Fournitures" textFill="WHITE">
                <font>
                    <Font name="Arial Bold" size="24.0" />
                </font>
            </Label>
            <Label text="Gérez votre stock de fournitures" textFill="#ecf0f1">
                <font>
                    <Font name="Arial" size="12.0" />
                </font>
            </Label>
        </VBox>
    </top>
    
    <center>
        <SplitPane dividerPositions="0.35" prefHeight="400.0" prefWidth="600.0">
            
            <VBox spacing="15.0" style="-fx-background-color: #ecf0f1;">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
                
                <Label text="Informations de la fourniture" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                
                <VBox spacing="5.0">
                    <Label text="Libellé *" />
                    <TextField fx:id="libelleTextField" promptText="Ex: Stylo Bic bleu" />
                </VBox>
                
                <VBox spacing="5.0">
                    <Label text="Description" />
                    <TextArea fx:id="descriptionTextArea" promptText="Description détaillée..." prefRowCount="3" />
                </VBox>
                
                <VBox spacing="5.0">
                    <Label text="Stock actuel *" />
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <TextField fx:id="stockTextField" promptText="0" prefWidth="100.0" />
                        <Label text="unités" />
                    </HBox>
                </VBox>
                
                <Label fx:id="messageLabel" textFill="RED" wrapText="true">
                    <font>
                        <Font name="Arial Bold" size="11.0" />
                    </font>
                </Label>
                
                <HBox spacing="10.0">
                    <Button fx:id="ajouterBtn" text="Ajouter" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="100.0" onAction="#handleAjouter" />
                    <Button fx:id="modifierBtn" text="Modifier" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="100.0" onAction="#handleModifier" disable="true" />
                    <Button fx:id="annulerBtn" text="Annuler" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" prefWidth="100.0" onAction="#handleAnnuler" />
                </HBox>
                
                <Separator />
                
                <VBox spacing="10.0">
                    <Label text="Rechercher" style="-fx-font-weight: bold;" />
                    <TextField fx:id="rechercheTextField" promptText="Rechercher par libellé..." onKeyReleased="#handleRecherche" />
                </VBox>
                
                <Separator />
                
                <VBox spacing="10.0">
                    <Label text="Filtres rapides" style="-fx-font-weight: bold;" />
                    <Button text="⚠️ Stock faible (≤ 10)" onAction="#handleStockFaible" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-size: 11px;" />
                </VBox>
            </VBox>
            
            <VBox spacing="10.0">
                <padding>
                    <Insets bottom="20.0" left="10.0" right="20.0" top="20.0" />
                </padding>
                
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label text="Liste des fournitures" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                    <Label fx:id="compteurLabel" text="(0 fourniture)" style="-fx-text-fill: #7f8c8d;" />
                </HBox>
                
                <TableView fx:id="fournitureTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="50.0" />
                        <TableColumn fx:id="libelleColumn" text="Libellé" prefWidth="180.0" />
                        <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="200.0" />
                        <TableColumn fx:id="stockColumn" text="Stock" prefWidth="80.0" />
                        <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150.0" />
                    </columns>
                </TableView>
                
                <HBox spacing="10.0" alignment="CENTER_RIGHT">
                    <Button text="Actualiser" onAction="#handleActualiser" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
                    <Button fx:id="ajouterStockBtn" text="+ Stock" onAction="#handleAjouterStock" style="-fx-background-color: #27ae60; -fx-text-fill: white;" disable="true" />
                    <Button fx:id="retirerStockBtn" text="- Stock" onAction="#handleRetirerStock" style="-fx-background-color: #e67e22; -fx-text-fill: white;" disable="true" />
                    <Button fx:id="supprimerBtn" text="Supprimer" onAction="#handleSupprimer" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" disable="true" />
                </HBox>
            </VBox>
            
        </SplitPane>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #34495e; -fx-padding: 10;">
            <Label fx:id="statutLabel" text="Prêt" textFill="WHITE">
                <font>
                    <Font name="Arial" size="11.0" />
                </font>
            </Label>
        </HBox>
    </bottom>
    
</BorderPane>
